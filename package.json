{
    "name": "arbeidsplassen",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "prettier:format": "npx prettier -w src",
        "lint": "next lint",
        "eslint": "eslint \"**/*.+(js|jsx|ts|tsx)\"",
        "eslint:fix": "eslint --fix \"**/*.+(js|jsx|ts|tsx)\"",
        "stylelint:fix": "stylelint --fix \"**/*.+(css)\"",
        "prettier": "prettier --check \"**/*.+(js|jsx|ts|tsx|json|yml|yaml|md|css)\"",
        "prettier:fix": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|yml|yaml|md|css)\"",
        "prepare": "husky install",
        "pre-commit": "lint-staged"
    },
    "dependencies": {
        "@amplitude/analytics-browser": "^1.10.3",
        "@grafana/faro-web-sdk": "^1.2.1",
        "@grafana/faro-web-tracing": "^1.2.1",
        "@navikt/aksel-icons": "^5.0.2",
        "@navikt/arbeidsplassen-theme": "^5.5.1",
        "@navikt/arbeidsplassen-css": "^7.2.5",
        "@navikt/arbeidsplassen-react": "^7.2.8",
        "@navikt/ds-css": "^5.0.2",
        "@navikt/ds-react": "^5.0.2",
        "@navikt/next-auth-wonderwall": "^1.3.0",
        "i18next": "^23.4.1",
        "next": "13.5.4",
        "next-i18next": "^14.0.0",
        "prop-types": "^15.8.1",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-i18next": "^13.0.3"
    },
    "devDependencies": {
        "eslint": "^8.39.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-next": "^13.3.4",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "husky": "^8.0.0",
        "lint-staged": "^13.2.2",
        "prettier": "^2.8.8",
        "stylelint": "^15.10.1",
        "stylelint-config-recommended": "^12.0.0"
    },
    "lint-staged": {
        "./*/**/*.{js,jsx,ts,tsx,json,yml,yaml}": [
            "npx prettier --write",
            "npx eslint --fix"
        ],
        "./*/**/*.css": [
            "npx prettier --write",
            "npx stylelint --fix"
        ],
        "*.{json,md}": [
            "npx prettier --write"
        ]
    }
}
